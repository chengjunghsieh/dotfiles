
{
    // "editor.fontSize": 14,
    // "editor.letterSpacing": 0.3,
    "editor.fontFamily": "JetbrainsMono Nerd Font",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.tabSize": 4,
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.fontLigatures": false,
    // "editor.cursorStyle": "block",
    "breadcrumbs.enabled": false,
    "search.showLineNumbers": true,
    // Controls if file decorations should use badges.
    "explorer.decorations.badges": false,

    //
    //----------------- Terminal ------------------------
    //
    "terminal.external.osxExec": "iTerm2.app",
    "terminal.integrated.letterSpacing": 0,
    "terminal.integrated.fontFamily": "JebrainsMono Nerd Font",
    "terminal.integrated.fontSize": 10,
    "terminal.integrated.cwd": "${relativeFileDirname}",

    //
    //-------------------- Language Specific --------------------------
    //
    
    //
    // C++
    //
    "[cpp]": {
      "editor.tabSize": 2,
    },

    //
    // Ruby
    //
    "[ruby]": {
      "editor.tabSize": 2,
    },

    //
    // Javasscript
    //
    "[javascript]": {
      "editor.tabSize": 2,
    },

    //
    // Python
    //
    "python.formatting.provider": "black",

    //
    // Go
    //
    "[go]": {
      "editor.insertSpaces": false,
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      },
      "editor.suggest.snippetsPreventQuickSuggestions": false
    },
    "gopls": {
      // "formatting.local": <comma-separated imports prefix>
      "formatting.gofumpt": true
    },

    // "workbench.fontAliasing": "antialiased",
    "workbench.startupEditor": "none",
    // "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": true,
    // "workbench.panel.defaultLocation": "left",
    "window.title": "${activeEditorLong}${separator}${rootName}",
    "workbench.editor.focusRecentEditorAfterClose": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,

    //
    //--------------------Code Runner--------------------------
    //
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "c": "cd $dir && clang $fileName -o $fileNameWithoutExt -Wall -O2 -I$CP_HOME/include -std=c11 -DUNOLIGHT && $dir$fileNameWithoutExt && rm -f tempCodeRunnerFilee.c tempCodeRunnerFile",
        "cpp": "cd $dir && clang++ $fileName -o $fileNameWithoutExt -Wall -O2 -I$CP_HOME/include -Wno-unused-result -std=c++17 -DUNOLIGHT && $dir$fileNameWithoutExt && rm -f tempCodeRunnerFile.cpp tempCodeRunnerFile",
        "python": "cd $dir && python $fileName",
    },
    "code-runner.saveFileBeforeRun": true,
    "code-runner.preserveFocus": true,
    "code-runner.clearPreviousOutput": false,

    "zenMode.centerLayout": false,
    "zenMode.hideTabs": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.iconTheme": "material-icon-theme",
    "terminal.integrated.enableMultiLinePasteWarning": false,


    //
    //----------------- Theme ------------------------
    //
    "workbench.colorTheme": "Catppuccin Mocha",

